{
  "name": "ts-basic-gltf-viewer",
  "version": "0.8.7",
  "description": "three.js-based basic gltf model viewer",
  "module": "dist/ts-basic-gltf-viewer.esm.min.js",
  "types": "dist/ts-basic-gltf-viewer.d.ts",
  "scripts": {
    "buildts": "tsc",
    "buildru": "rollup -c",
    "bundletypes": "dts-bundle-generator -o dist/ts-basic-gltf-viewer.d.ts src/gltf-viewer.ts",
    "copydraco": "copyfiles -f ./node_modules/three/examples/js/libs/draco/* ./demo/assets/draco",
    "build": "npm run buildts && npm run buildru && npm run bundletypes && npm run copydraco",
    "start": "npm run build && lite-server -c ls-config.json",
    "mpublish": "npm version minor && npm publish",
    "ppublish": "npm version patch && npm publish"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yermolim/ts-basic-gltf-viewer.git"
  },
  "keywords": [
    "3d",
    "viewer",
    "model",
    "glb",
    "gltf",
    "threejs",
    "webgl",
    "draco",
    "rxjs"
  ],
  "author": "Volodymyr Yermolenko <yermolim@gmail.com> (https://github.com/yermolim)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yermolim/ts-basic-gltf-viewer/issues"
  },
  "homepage": "https://github.com/yermolim/ts-basic-gltf-viewer#readme",
  "dependencies": {
    "rxjs": "^6.6.6",
    "three": "^0.126.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-multi-entry": "^4.0.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-replace": "^2.4.1",
    "@rollup/plugin-strip": "^2.0.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/resize-observer-browser": "^0.1.5",
    "@types/three": "^0.126.0",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/eslint-plugin-tslint": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "copyfiles": "^2.4.1",
    "dts-bundle-generator": "^5.7.0",
    "eslint": "^7.21.0",
    "eslint-plugin-import": "^2.22.1",
    "lite-server": "^2.6.1",
    "rollup": "^2.40.0",
    "rollup-plugin-css-porter": "^1.0.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  }
}
